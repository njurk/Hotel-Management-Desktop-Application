<Window
    x:Class="MVVMFirma.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MVVMFirma.Views"
    Title="MVVMFirma"
    Width="300"
    Height="300"
    WindowState="Maximized">
    
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Menu
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2">
            <MenuItem Header="_Plik" />
            <MenuItem Header="_Magazyn">
                <MenuItem Header="Wszystkie towary" />
                <MenuItem Header="Nowy towar" />
                <MenuItem Header="Wydanie Zewnętrzne (WZ)" />
                <MenuItem Header="Przyjęcie Zewnętrzne (PZ)" />
            </MenuItem>
            <MenuItem Header="Program" />
        </Menu>
        <ToolBar
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2"
            >
            <Button
                Width="auto"
                Height="25"
                Margin="4"
                Content="Raport przychodów"
                Background="White" 
                Command="{Binding OpenRaportPrzychodowViewCommand}"
                />
            <Button
                Width="auto"
                Height="25"
                Margin="4"
                Content="Utarg2"
                Background="White" 
                Command="{Binding OpenBusinessViewCommand}"
                />
            <Button
                Width="auto"
                Height="25"
                Margin="4"
                Content="Utarg3"
                Background="White" 
                Command="{Binding OpenAnotherViewCommand}"
                />
        </ToolBar>
        <Border Grid.Row="2" Grid.Column="0">
            <HeaderedContentControl
                Content="{Binding Path=Commands}"
                ContentTemplate="{StaticResource CommandsTemplate}"
                Header="Operacje"
                Style="{StaticResource MainHCCStyle}" />
        </Border>
        <Border Grid.Row="2" Grid.Column="1">
            <HeaderedContentControl
                Content="{Binding Path=Workspaces}"
                ContentTemplate="{StaticResource WorkspacesTemplate}"
                Header="Przestrzeń robocza"
                Style="{StaticResource MainHCCStyle}" />
        </Border>
        <StatusBar
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock>Nikola Jurkiewicz</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

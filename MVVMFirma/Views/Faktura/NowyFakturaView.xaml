<local:JedenViewBase
    x:Class="MVVMFirma.Views.NowyFakturaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMFirma.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MVVMFirma.Helper"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <local:JedenViewBase.Resources>
        <vm:DecimalConverter x:Key="DecimalConverter" />
    </local:JedenViewBase.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Numer faktury" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,8,0,8"
            IsEnabled="False"
            Text="{Binding Path=NrFaktury}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Rezerwacja" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,8,0,8"
            IsEnabled="False"
            Text="{Binding Path=NrRezerwacji, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,8,65,8"
            Command="{Binding OpenRezerwacjeModalneCommand}"
            Content="..." />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="NIP" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=NIP, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Data wystawienia" />
        <DatePicker
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,8,0,8"
            SelectedDate="{Binding DataWystawienia, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Data sprzedaży" />
        <DatePicker
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,8,0,8"
            SelectedDate="{Binding DataSprzedazy, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Kwota brutto" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=KwotaBrutto, Converter={StaticResource DecimalConverter}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="% VAT" />
        <ComboBox
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding VATItems}"
            SelectedValue="{Binding Path=IdVat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            SelectedValuePath="Key" />

        <Label
            Grid.Row="7"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Kwota netto" />
        <TextBox
            Grid.Row="7"
            Grid.Column="1"
            Margin="0,8,0,8"
            IsEnabled="False"
            Text="{Binding Path=KwotaNetto, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="8"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Termin płatności" />
        <DatePicker
            Grid.Row="8"
            Grid.Column="1"
            Margin="0,8,0,8"
            SelectedDate="{Binding TerminPlatnosci, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="9"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Opis" />
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Opis, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="10"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Zapłacono" />
        <TextBlock
            Grid.Row="10"
            Grid.Column="1"
            Margin="0,12,0,12"
            Text="{Binding SumaPlatnosci, StringFormat={}{0:C}}" />
    </Grid>
</local:JedenViewBase>

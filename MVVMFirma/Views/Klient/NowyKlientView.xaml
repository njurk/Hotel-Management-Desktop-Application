<local:JedenViewBase
    x:Class="MVVMFirma.Views.NowyKlientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMFirma.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Imię" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Imie, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Nazwisko" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Nazwisko, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Ulica" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Ulica, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Numer domu" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=NrDomu, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Numer lokalu" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=NrLokalu, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Kod pocztowy" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=KodPocztowy, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Miasto" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Miasto, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="7"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Kraj" />
        <ComboBox
            Grid.Row="7"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding KrajItems}"
            SelectedValue="{Binding Path=IdKraju, Mode=TwoWay}"
            SelectedValuePath="Key" />

        <Label
            Grid.Row="8"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Email" />
        <TextBox
            Grid.Row="8"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Email, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="9"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Telefon" />
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Telefon, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="10"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="NIP" />
        <TextBox
            Grid.Row="10"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=NIP, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</local:JedenViewBase>

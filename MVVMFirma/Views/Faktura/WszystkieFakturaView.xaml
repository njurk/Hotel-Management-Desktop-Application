<local:WszystkieViewBase x:Class="MVVMFirma.Views.WszystkieFakturaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             xmlns:vm="clr-namespace:MVVMFirma.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1100">

    <local:WszystkieViewBase.Resources>
        <vm:PercentConverter x:Key="PercentConverter"/>
    </local:WszystkieViewBase.Resources>

    <Grid>
        <DataGrid CanUserAddRows="False" IsReadOnly="True" CanUserDeleteRows="False" AutoGenerateColumns="False" ItemsSource="{Binding List}" SelectedItem="{Binding SelectedItem}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdFaktury}"/>
                <DataGridTextColumn Header="Numer faktury" Binding="{Binding NrFaktury}"/>
                <DataGridTextColumn Header="Numer rezerwacji" Binding="{Binding NrRezerwacji}"/>
                <DataGridTextColumn Header="NIP" Binding="{Binding NIP}"/>
                <DataGridTextColumn Header="Imie klienta" Binding="{Binding KlientImie}"/>
                <DataGridTextColumn Header="Nazwisko klienta" Binding="{Binding KlientNazwisko}"/>
                <DataGridTextColumn Header="Data wystawienia" Binding="{Binding DataWystawienia, StringFormat=yyyy-MM-dd}"/>
                <DataGridTextColumn Header="Data sprzedaży" Binding="{Binding DataSprzedazy, StringFormat=yyyy-MM-dd}"/>
                <DataGridTextColumn Header="Netto" Binding="{Binding KwotaNetto, StringFormat={}{0:C}}"/>
                <DataGridTextColumn Header="VAT" Binding="{Binding VAT, Converter={StaticResource PercentConverter}}"/>
                <DataGridTextColumn Header="Brutto" Binding="{Binding KwotaBrutto, StringFormat={}{0:C}}"/>
                <DataGridTextColumn Header="Termin płatności" Binding="{Binding TerminPlatnosci, StringFormat=yyyy-MM-dd}"/>
                <DataGridTextColumn Header="Zapłacono" Binding="{Binding Zaplacono, StringFormat={}{0:C}}"/>
                <DataGridTextColumn Header="Opis" Binding="{Binding Opis}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>

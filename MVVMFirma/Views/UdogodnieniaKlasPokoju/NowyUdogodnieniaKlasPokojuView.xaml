<local:JedenViewBase
    x:Class="MVVMFirma.Views.NowyUdogodnieniaKlasPokojuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMFirma.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,8,0,0"
            Content="Klasa pokoju" />
        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding KlasaPokojuItems}"
            SelectedValue="{Binding Path=IdKlasyPokoju, Mode=TwoWay, ValidatesOnDataErrors=True}"
            SelectedValuePath="Key" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,8,0,0"
            Content="Udogodnienie" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding UdogodnienieItems}"
            SelectedValue="{Binding Path=IdUdogodnienia, Mode=TwoWay, ValidatesOnDataErrors=True}"
            SelectedValuePath="Key" />
    </Grid>
</local:JedenViewBase>

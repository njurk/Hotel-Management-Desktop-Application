<local:JedenViewBase
    x:Class="MVVMFirma.Views.NowyPokojView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMFirma.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Numer pokoju" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=NrPokoju, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Typ pokoju" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding TypPokojuItems}"
            SelectedValue="{Binding Path=IdTypuPokoju, Mode=TwoWay}"
            SelectedValuePath="Key" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Klasa pokoju" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding KlasaPokojuItems}"
            SelectedValue="{Binding Path=IdKlasyPokoju, Mode=TwoWay}"
            SelectedValuePath="Key" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Status pokoju" />
        <ComboBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding StatusPokojuItems}"
            SelectedValue="{Binding Path=IdStatusuPokoju, Mode=TwoWay}"
            SelectedValuePath="Key" />
    </Grid>
</local:JedenViewBase>

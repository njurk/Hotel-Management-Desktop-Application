<UserControl
    x:Class="MVVMFirma.Views.RaportPrzychodowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMFirma.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid
        Width="800"
        Height="250"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="55" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Margin="6"
            HorizontalContentAlignment="Center"
            Content="Statystyki przychodów" />
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="10,6"
                Command="{Binding SetLastYearCommand}"
                Content="Ostatni rok" />
            <Button
                Grid.Column="1"
                Margin="10,6"
                Command="{Binding SetCurrentYearCommand}"
                Content="Bieżący rok" />
            <Button
                Grid.Column="2"
                Margin="10,6"
                Command="{Binding SetLastMonthCommand}"
                Content="Ostatni miesiąc" />
            <Button
                Grid.Column="3"
                Margin="10,6"
                Command="{Binding SetCurrentMonthCommand}"
                Content="Bieżący miesiąc" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="6"
                Content="Od:" />
            <DatePicker
                Grid.Column="1"
                Margin="6"
                SelectedDate="{Binding DataOd, ValidatesOnDataErrors=True}" />
            <Label
                Grid.Column="2"
                Margin="6"
                Content="Do:" />
            <DatePicker
                Grid.Column="3"
                Margin="6"
                SelectedDate="{Binding DataDo, ValidatesOnDataErrors=True}" />
        </Grid>
        <Button
            Grid.Row="3"
            Margin="6"
            Command="{Binding ObliczPrzychodyCommand}"
            Content="Oblicz" />
        <Grid Grid.Row="4" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="1,6"
                Content="Przychód netto:" />
            <TextBlock
                Grid.Column="1"
                Margin="3,12,3,12"
                Text="{Binding PrzychodNetto, StringFormat=C}" />
            <Label
                Grid.Column="2"
                Margin="1,6"
                Content="Przychód brutto:" />
            <TextBlock
                Grid.Column="3"
                Margin="3,12,3,12"
                Text="{Binding PrzychodBrutto, StringFormat=C}" />
            <Label
                Grid.Column="4"
                Margin="1,6"
                Content="Podatek VAT:" />
            <TextBlock
                Grid.Column="5"
                Margin="3,12,3,12"
                Text="{Binding PodatekVAT, StringFormat=C}" />
        </Grid>
    </Grid>
</UserControl>

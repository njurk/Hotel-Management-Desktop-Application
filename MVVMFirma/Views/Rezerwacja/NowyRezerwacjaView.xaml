<local:JedenViewBase
    x:Class="MVVMFirma.Views.NowyRezerwacjaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMFirma.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Numer rezerwacji" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,12,0,12"
            Text="{Binding Path=NrRezerwacji}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Data rezerwacji" />
        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,8,0,8"
            SelectedDate="{Binding DataRezerwacji, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Klient" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding KlientItems}"
            SelectedValue="{Binding Path=IdKlienta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            SelectedValuePath="Key" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Liczba dorosłych" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=LiczbaDoroslych, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Liczba dzieci" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=LiczbaDzieci, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Zwierzęta" />
        <CheckBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,8,0,8"
            VerticalAlignment="Center"
            IsChecked="{Binding Path=CzyZwierzeta, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Data zameldowania" />
        <DatePicker
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,8,0,8"
            SelectedDate="{Binding DataZameldowania, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="7"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Data wymeldowania" />
        <DatePicker
            Grid.Row="7"
            Grid.Column="1"
            Margin="0,8,0,8"
            SelectedDate="{Binding DataWymeldowania, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="8"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Pokój" />
        <ComboBox
            Grid.Row="8"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            ItemsSource="{Binding PokojItems}"
            SelectedValue="{Binding Path=IdPokoju, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            SelectedValuePath="Key" />

        <Label
            Grid.Row="9"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Uwagi" />
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Uwagi, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="10"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Zniżka" />
        <ComboBox
            Grid.Row="10"
            Grid.Column="1"
            Margin="0,8,0,8"
            DisplayMemberPath="Value"
            IsEnabled="{Binding CzyZnizka}"
            ItemsSource="{Binding ZnizkaItems}"
            SelectedValue="{Binding Path=IdZnizki, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            SelectedValuePath="Key" />
        <CheckBox
            Grid.Row="10"
            Grid.Column="2"
            Margin="12,8,0,8"
            VerticalAlignment="Center"
            IsChecked="{Binding Path=CzyZnizka, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
    </Grid>
</local:JedenViewBase>

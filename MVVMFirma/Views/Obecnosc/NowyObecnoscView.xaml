<local:JedenViewBase
    x:Class="MVVMFirma.Views.NowyObecnoscView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMFirma.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Pracownik" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,8,0,8"
            IsEnabled="False"
            Text="{Binding ImieNazwiskoPracownika, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="10,8,14,8"
            Command="{Binding OpenPracownicyModalneCommand}"
            Content="..." />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Data" />
        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,8,0,8"
            SelectedDate="{Binding Data, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Obecny/-a" />
        <CheckBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,8,0,8"
            VerticalAlignment="Center"
            IsChecked="{Binding Path=CzyObecny, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Godzina rozpoczęcia" />
        <xceed:TimePicker
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,8,0,8"
            Format="ShortTime"
            IsEnabled="{Binding IsGodzinyEnabled}"
            Text="{Binding Path=GodzinaRozpoczecia, Mode=TwoWay, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Godzina zakończenia" />
        <xceed:TimePicker
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,8,0,8"
            Format="ShortTime"
            IsEnabled="{Binding IsGodzinyEnabled}"
            Text="{Binding Path=GodzinaZakonczenia, Mode=TwoWay, ValidatesOnDataErrors=True}"
            TimeInterval="30" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Usprawiedliwiony/-a" />
        <CheckBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,8,0,8"
            VerticalAlignment="Center"
            IsChecked="{Binding Path=CzyUsprawiedliwiony, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            IsEnabled="{Binding IsUsprawiedliwionyEnabled}" />

        <Label
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Uwagi" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Uwagi, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</local:JedenViewBase>

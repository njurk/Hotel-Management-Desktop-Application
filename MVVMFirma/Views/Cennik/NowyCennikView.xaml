<local:JedenViewBase x:Class="MVVMFirma.Views.NowyCennikView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             xmlns:vm="clr-namespace:MVVMFirma.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <local:JedenViewBase.Resources>
        <vm:DecimalConverter x:Key="DecimalConverter"/>
    </local:JedenViewBase.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Margin="0,8,0,8" Content="Klasa pokoju"/>
        <ComboBox Grid.Column="1" Grid.Row="0" Margin="0,8,0,8" ItemsSource="{Binding KlasaPokojuItems}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding Path=IdKlasyPokoju, Mode=TwoWay}"/>
        
        <Label Grid.Column="0" Grid.Row="1" Margin="0,8,0,8" Content="Typ pokoju"/>
        <ComboBox Grid.Column="1" Grid.Row="1" Margin="0,8,0,8" ItemsSource="{Binding TypPokojuItems}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding Path=IdTypuPokoju, Mode=TwoWay}"/>

        <Label Grid.Column="0" Grid.Row="2" Margin="0,8,0,8" Content="Cena za osobę dorosłą"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="0,8,0,8" Text="{Binding Path=CenaDorosly, Converter={StaticResource DecimalConverter}, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="3" Margin="0,8,0,8" Content="Cena za dziecko"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="0,8,0,8" Text="{Binding Path=CenaDziecko, Converter={StaticResource DecimalConverter}, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="4" Margin="0,8,0,8" Content="Cena za zwierzęta"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="0,8,0,8" Text="{Binding Path=CenaZwierzeta, Converter={StaticResource DecimalConverter}, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</local:JedenViewBase>
